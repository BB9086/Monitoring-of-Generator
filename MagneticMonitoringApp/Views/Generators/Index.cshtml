@model IEnumerable<MagneticMonitoringApp.Models.Generator>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Results.css" rel="stylesheet" />

<h2 style="text-align: center">List of generators</h2>

<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { style = "color:#1B3409; font-weight: bold;" })
    </p>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
            <tr style="color:#1B3409; background-color:#9BD770">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Power_MW)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Power_MW)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:#1B3409; font-weight: bold;" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:#1B3409; font-weight: bold;" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:#1B3409; font-weight: bold;" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
